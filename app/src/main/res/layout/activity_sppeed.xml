<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true"
    android:background="#ede27a"
    tools:context="com.example.anshul.speed.sppeed">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meter"
        android:layout_centerInParent="true"
        android:src="@drawable/meter1"
        android:scaleType="fitXY" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/needle"
        android:layout_alignBottom="@+id/meter"
        android:src="@drawable/needle"
        android:layout_alignTop="@+id/meter"
        android:layout_alignStart="@+id/meter"
        android:layout_alignEnd="@+id/meter" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/meter"
        android:layout_marginBottom="50dp"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/t1"
        android:text="0 m/s"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ede27a"
        android:layout_below="@+id/meter"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/warning"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/logout"
        android:background="@drawable/shape"
        android:text="LOGOUT"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"


        />




